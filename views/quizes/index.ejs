<fieldset>
	<legend>Buscar preguntas:</legend>
	<form action="/quizes" method="get">
		<input type="text" name="search" id="search" placeholder="Buscar pregunta"/>
		<input type="submit" value="buscar" />
	</form>
</fieldset>
<table>

<% var i; for(i=0; i < quizes.length; i++) { %>
<tr>
<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %>&nbsp;(<%=quizes[i].tema %>)</a></td>
<% if(session.user){ %>
<td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></td>
<td>
	<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
	<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>')">
	Borrar
	</button>
	</form>
</td>
<% } %>
</tr>
<% } %>
</table>
<% if(session.user){ %>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %> 
